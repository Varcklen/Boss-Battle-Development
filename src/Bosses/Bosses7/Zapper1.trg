  "Script": "function Trig_Zapper1_Conditions takes nothing returns boolean\r\n    return GetUnitTypeId(udg_DamageEventTarget) == 'n00Q'\r\nendfunction\r\n\r\nfunction Zapper1Cast takes nothing returns nothing\r\n    local integer id = GetHandleId( GetExpiredTimer() )\r\n    local real r = LoadReal( udg_hash, id, StringHash( \"bszp1\" ) )\r\n    local unit boss = LoadUnitHandle( udg_hash, id, StringHash( \"bszp1\" ) )\r\n    local unit dummy = LoadUnitHandle( udg_hash, id, StringHash( \"bszp1d\" ) )\r\n    local real xc = LoadReal( udg_hash, id, StringHash( \"bszp1x\" ) )\r\n    local real yc = LoadReal( udg_hash, id, StringHash( \"bszp1y\" ) )\r\n    local real x\r\n    local real y\r\n    \r\n    if GetUnitState( boss, UNIT_STATE_LIFE) <= 0.405 or not( udg_fightmod[0] ) then\r\n        call RemoveUnit( dummy )\r\n        call DestroyTimer( GetExpiredTimer() )\r\n        call FlushChildHashtable( udg_hash, id )\r\n    else\r\n        set x = xc + 1000 * Cos( r * bj_DEGTORAD)\r\n        set y = yc + 1000 * Sin( r * bj_DEGTORAD)\r\n        call SaveReal( udg_hash, id, StringHash( \"bszp1\" ), r + 1 )\r\n        call SetUnitPosition( dummy, x, y )\r\n        call SetUnitFacing( dummy, 90 + r )\r\n    endif\r\n    \r\n    set boss = null\r\n    set dummy = null\r\nendfunction\r\n\r\nfunction Zapper2Fire takes nothing returns nothing\r\n    local integer id = GetHandleId( GetExpiredTimer( ) )\r\n    local unit projectile = LoadUnitHandle( udg_hash, id, StringHash( \"bszpfire\" ) )\r\n    local unit boss = LoadUnitHandle( udg_hash, id, StringHash( \"bszpfireu\" ) )\r\n    local unit t = LoadUnitHandle( udg_hash, id, StringHash( \"bszpfiret\" ) )\r\n    local location areaLoc = LoadLocationHandle( udg_hash, id, StringHash( \"bszpfire_area\" ) )\r\n    local location projectileLoc = GetUnitLoc(projectile)\r\n    local real direction = AngleBetweenPoints(projectileLoc, areaLoc)\r\n    local real distance = DistanceBetweenPoints(projectileLoc, areaLoc)\r\n    local real moveRange = LoadReal( udg_hash, id, StringHash( \"bszpfire\" ) )\r\n    local location newLoc = null\r\n    local boolean isBossAlive = IsUnitAlive(boss)\r\n    \r\n    if distance <= 35 or isBossAlive == false or udg_fightmod[0] == false then\r\n        if isBossAlive then\r\n            call GroupAoE( boss, GetLocationX(areaLoc), GetLocationY(areaLoc), 100, 125, \"enemy\", \"Abilities\\\\Spells\\\\Other\\\\Incinerate\\\\FireLordDeathExplode.mdl\", null )\r\n        endif\r\n        call RemoveUnit( t )\r\n        call RemoveUnit( projectile )\r\n        call RemoveLocation(areaLoc)\r\n        call DestroyTimer( GetExpiredTimer() )\r\n    else \r\n    \tset newLoc = PolarProjectionBJ( projectileLoc, 0.03 * moveRange, direction )\r\n    \tcall SetUnitPositionLoc(projectile, newLoc)\r\n    endif\r\n    \r\n    call RemoveLocation(projectileLoc)\r\n    call RemoveLocation(newLoc)\r\n    set areaLoc = null\r\n    set projectileLoc = null\r\n    set newLoc = null\r\n    set boss = null\r\n    set t = null\r\n    set projectile = null\r\nendfunction\r\n\r\nfunction Zapper2CreateProjectile takes unit u returns nothing\r\n    local unit targetPoint\r\n    local unit projectile\r\n    local real r\r\n    local real x\r\n    local real y\r\n    local integer id\r\n    local unit target\r\n    local location areaLoc\r\n    local location targetLoc\r\n\r\n    set target = DeathSystem_GetRandomAliveHero()\r\n    if target != null and GetRandomInt(1, 5) == 1 then\r\n    \tset targetLoc = GetUnitLoc(target)\r\n    \tset areaLoc = PolarProjectionBJ( targetLoc, 75, GetRandomInt( 0, 360) )\r\n    else\r\n    \tset targetLoc = GetUnitLoc(u)\r\n    \tset areaLoc = PolarProjectionBJ( targetLoc, 900, GetRandomInt( 0, 360) )\r\n    endif\r\n    \r\n    set targetPoint = CreateUnitAtLoc( GetOwningPlayer( u ), 'u000', areaLoc, 270 )\r\n    call UnitAddAbility( targetPoint, 'A136')\r\n    \r\n    set projectile = dummyspawn( u, 0, 'A07D', 0, 0 )\r\n    set x = GetUnitX(projectile) - GetLocation